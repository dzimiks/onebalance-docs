{
  "name": "onebalance-docs",
  "version": "1.0.0",
  "description": "Official OneBalance Docs",
  "type": "module",
  "scripts": {
    "dev": "npx mintlify dev",
    "openapi": "npx @mintlify/scraping@latest openapi-file api-reference/openapi.json -o api-reference",
    "broken-links": "npx mintlify broken-links",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.md,.mdx && node scripts/check-frontmatter.js",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.md,.mdx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx}\"",
    "pre-commit": "pnpm lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OneBalance-io/onebalance-docs.git"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-prettier": "^5.2.6",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3"
  }
}
